@using AccessControl.AdminUI.Models

@implements IDialogContentComponent<FeatureKeyRolePermissionsModel>

<FluentMessageBarProvider Section="@ModelConsts.MESSAGES_DIALOG" MaxMessageCount="1" />

<FluentDialogBody>
    <FluentCombobox Placeholder="Select or create new feature key..."
                    Label="Feature Key"
                    Autofocus="true"
                    Items="@Content.AllFeatureKeys"
                    @bind-Value="@Content.FeatureKey"
                    style="width: 100%;"
                    Immediate ImmediateDelay="100" />
    <br/>
    <br/>
    <FluentSelect TOption="string"
                   Items="@Content.AllRoles"
                   Label="Roles:"
                   Multiple="true"
                   OptionValue="@(p => p)"
                   OptionText="@(p => p)"
                   Height="300px"
                   Width="15rem"
                   @bind-SelectedOptions="@Content.SelectedRoles"/>
</FluentDialogBody>
